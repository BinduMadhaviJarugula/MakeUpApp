<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen7"
    android:minHeight="@dimen/dimen8"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="@dimen/dimen9"
    app:cardElevation="@dimen/dimen5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/yello3"
        android:orientation="vertical"
        android:padding="@dimen/dimen6">

        <TextView
            android:id="@+id/textname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text"
            android:textColor="@color/blue3" />


        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen4"
            android:contentDescription="@string/image3"
            android:cropToPadding="true"
            android:padding="@dimen/dimen3"
            android:scaleType="centerCrop" />
    </LinearLayout>

</android.support.v7.widget.CardView>